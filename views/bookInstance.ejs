<!-- bookInstance.ejs -->

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">

    <title>BookEra - <%= book.title %></title>


    <link rel="stylesheet" href="/stylesheets/boot.css" type="text/css">

</head>

<body>
<%- include('partials/navbar') %>
<div class="container mt-5">
    <% if (success.length > 0) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
    <% } %>
    <% if (error.length > 0) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <!-- Book cover image -->
                <img src="<%= book.cover %>" class="card-img-top" alt="<%= book.title %>">
                <div class="card-body">
                    <!-- Book title -->
                    <h5 class="card-title"><%= book.title %></h5>
                    <!-- Book authors -->
                    <p class="card-text">Authors: <%= book.authors.map(author => author.name).join(', ') %></p>
                    <!-- Book publisher -->
                    <p class="card-text">Publisher: <%= book.publisher.name %></p>
                    <!-- Book categories -->
                    <p class="card-text">
                        Categories: <%= book.categories.map(category => category.name).join(', ') %></p>
                    <!-- Book ISBN -->
                    <p class="card-text">ISBN: <%= book.isbn %></p>
                    <!-- Book description -->
                    <p class="card-text">Description: <%= book.description %></p>
                    <!-- Book price -->
                    <p class="card-text">Price: $<%= book.price.toFixed(2) %></p>
                    <!-- Book quantity -->
                    <p class="card-text">Quantity: <%= book.quantity %></p>
                    <!-- Book reviews -->
                    <h6 class="mt-4">Reviews:</h6>
                    <% if (reviews.length > 0) { %>
                        <ul class="list-group">
                            <% reviews.forEach(review => { %>
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <strong>Rating:</strong> <%= review.rating %>
                                            <% if (review.content) { %>
                                                <p><strong>Review:</strong> <%= review.content %></p>
                                            <% } %>
                                            <p><em>By: <%= review.user.username %></em></p>
                                        </div>
                                        <% if (user && user._id.toString() === review.user._id.toString()) { %>
                                            <div class="col-md-2">
                                                <form action="/reviews/<%= review._id %>/delete" method="POST">
                                                    <button type="submit" class="btn btn-warning">Delete Review</button>
                                                </form>
                                            </div>
                                        <% } %>
                                    </div>
                                </li>
                            <% }) %>
                        </ul>
                    <% } else { %>
                        <p>No reviews yet.</p>
                    <% } %>
<% if (user) { %>
    <h6 class="mt-4">Add a Review:</h6>
    <form action="/reviews/<%= book._id %>/create" method="POST">
        <div class="form-group">
            <label for="rating">Rating:</label>
            <div>
                <input type="radio" id="star1" name="rating" value="1">
                <label for="star1">1</label>
                <input type="radio" id="star2" name="rating" value="2">
                <label for="star2">2</label>
                <input type="radio" id="star3" name="rating" value="3">
                <label for="star3">3</label>
                <input type="radio" id="star4" name="rating" value="4">
                <label for="star4">4</label>
                <input type="radio" id="star5" name="rating" value="5">
                <label for="star5">5</label>
            </div>
        </div>
        <div class="form-group">
            <label for="content">Review:</label>
            <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add Review</button>
    </form>
<% } %>
                    <!-- Display the delete button -->
                    <% if (user && user._id.toString() === book.seller._id.toString()) { %>
                        <form action="/books/<%= book._id %>/delete" method="POST">
                        <button type="submit" class="btn btn-danger">Delete Book</button>
                        <a href="/books/<%= book._id %>/update" class="btn btn-primary">Update Book</a>
                    </form>
                    <% } %>
                </div>

            </div>
        </div>
    </div>
</div>

</body>

</html>

<!DOCTYPE html>
<html>
<head>
    <title>Update Review</title>
    <link rel="stylesheet" href="/stylesheets/boot.css" type="text/css">
</head>
<body>
    <% if (success.length > 0) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
    <% } %>
    <% if (error.length > 0) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Update Review</h1>
                <form action="/reviews/<%= review._id %>/update" method="POST">
                    <div class="form-group">
                        <label for="rating">Rating</label>
                        <select class="form-control" id="rating" name="rating" required>
                            <option value="1" <%= review.rating === 1 ? 'selected' : '' %>>1</option>
                            <option value="2" <%= review.rating === 2 ? 'selected' : '' %>>2</option>
                            <option value="3" <%= review.rating === 3 ? 'selected' : '' %>>3</option>
                            <option value="4" <%= review.rating === 4 ? 'selected' : '' %>>4</option>
                            <option value="5" <%= review.rating === 5 ? 'selected' : '' %>>5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="content">Review</label>
                        <textarea class="form-control" id="content" name="content"><%= review.content %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Update Review</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
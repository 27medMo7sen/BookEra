
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">

    <title>BookEra-About Page</title>

    <!-- CSS FILES -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Sono:wght@200;300;400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" type="text/css">

    <link rel="stylesheet" href="/stylesheets/bootstrap-icons.css" type="text/css">

    <link href="/stylesheets/templatemo-pod-talk.css" rel="stylesheet" type="text/css">
    <style>
        /* Additional styles for card customization */
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.02);
        }

        .card-body {
            background-color: #f8f9fa; /* Set your desired background color */
        }
    </style>
</head>
<body>
<%- include('partials/navbar') %>

<!--list books in bootstrap cards-->


<div class="container mt-5">
     <% if (success.length > 0) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <% } %>
    <% if (error.length > 0) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
        <% } %>
     <% if (user) {%>
    <a href="/books/create" class="btn btn-primary">Create New Book</a>
    <% } %>
    <div class="row">
        <% books.forEach(book => { %>
            <div class="col-md-4 mb-4">
            <a href="/books/<%= book._id %>">
                <div class="card">
                    <!-- Book cover image -->
                    <img src="<%= book.cover %>" class="card-img-top" alt="<%= book.title %>">
                    <div class="card-body">
                        <!-- Book title -->
                        <h5 class="card-title"><%= book.title %></h5>
                        <!-- Book authors -->
                        <p class="card-text">Authors: <%= book.authors.map(author => author.name).join(', ') %></p>
                        <!-- Book publisher -->
                        <p class="card-text">Publisher: <%= book.publisher.name %></p>
                        <!-- Book categories -->
                        <p class="card-text">Categories: <%= book.categories.map(category => category.name).join(', ') %></p>
                        <!-- Book ISBN -->
                        <p class="card-text">ISBN: <%= book.isbn %></p>
                        <!-- Book description -->
                        <p class="card-text">Description: <%= book.description %></p>
                        <!-- Book price -->
                        <p class="card-text">Price: $<%= book.price.toFixed(2) %></p>
                        <!-- Book quantity -->
                        <p class="card-text">Quantity: <%= book.quantity %></p>
                        <!-- Other book details can be added here -->
                        <!-- Add more details as needed -->
                    </div>
                </div>
            </a>
            </div>
        <% }) %>
    </div>
</div>
</body>
</html>

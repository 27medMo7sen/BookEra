<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="/stylesheets/log.css" type="text/css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Login Page</title>
</head>

<body>

<% if (success.length > 0) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
<% } %>
<% if (error.length > 0) { %>
    <div class="alert alert-danger" style="position: absolute; z-index: 2;top: 0;width: 100%;font-weight: bold;">
        <%= error %>
    </div>
<% } %>
<div class="banner">
    <div class="wrapper">
        <% if (user) { %>
            <h1 class="text-white">WELCOME BACK <%= user.username %></h1>
            <a class="btn btn-primary" href="/users/logout">LOG OUT</a>
        <% } else { %>
        <form action="/users/login" method="POST">
            <h1>Login</h1>
            <div class="input-box">
                <input name="username" placeholder="Username" type="text" />
                <i class='bx bxs-user'></i>
            </div>
            <div class="input-box">
                <input name="password" placeholder="Password" type="password" />
                <i class='bx bxs-lock-alt' ></i>
            </div>
            <button type="submit" class="btn" role="button">Login</button>
            <div class="register-link">
                <p>Don't have an account? <a href="/users/signup">Register</a></p>
            </div>
        </form>
        <% } %>
    </div>
</div>
</body>
</html>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="/stylesheets/log.css" type="text/css">

    <link rel="stylesheet" href="/stylesheets/boot.css" type="text/css">

    <title>Login Page</title>
</head>

<style>
    body, html {
        margin: 0;
        overflow: hidden;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
    }

</style>
<body>

<%- include('partials/navbar') %>

<% if (success.length > 0) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
<% } %>
<% if (error.length > 0) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>
<div class="header">
    <div style="font-weight: bold;position: relative;bottom: 60px">BOOK<span>ERA</span></div>
</div>

    <div class="background">
        <img src="/images/b2.png" alt="">
    </div>
    <div class="login">
    <% if (user) { %>
        <h1 class="text-white">WELCOME BACK <%= user.username %></h1>
        <a class="btn btn-primary" href="/users/logout">LOG OUT</a>

    <% } else { %>
        <form action="/users/login" method="POST" style="position:relative;bottom: 60px">
            <input name="username" placeholder="Username" type="text" />
            <input name="password" placeholder="Password" type="password" />
            <button class="button-64" role="button"><span class="text">Log In</span></button>
        </form>
    <% } %>
</div>
</body>
